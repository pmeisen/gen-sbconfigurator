<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- get the properties used for the whole configuration -->
  <bean class="net.meisen.general.sbconfigurator.config.placeholder.SpringPropertyHolder">
    <property name="locationSelector" value="*.properties" />
  </bean>
  
  <!-- include the default configuration -->
  <import resource="classpath:/net/meisen/general/sbconfigurator/sbconfigurator-core.xml"/>
  
  <bean id="corePropertyHolder" class="net.meisen.general.sbconfigurator.config.mocks.TestPropertyHolder">
    <property name="properties">
      <value>
        testValue1=1st-value1
        testValue2=1st-value2
      </value>
    </property>
  </bean>
</beans>